<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="20"
            android:background="@color/colorPrimaryDark">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:weightSum="10"
                android:layout_marginTop="10dp">
            <TextView
                    android:text="DATUM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txtDatum"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:textColor="@color/colorAccent"
                    android:textSize="8dp"/>
            <TextView
                    android:text="GEGEVEN DOOR"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txtDonor" android:layout_weight="5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="8dp"/>
        </LinearLayout>
        <TextView
                android:text="REDEN"
                android:layout_width="wrap_content"
                android:layout_height="0dp" android:id="@+id/txtReden" android:layout_weight="12"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"

        />
        <CheckBox
                android:text="Done"
                android:layout_width="wrap_content"
                android:layout_height="0dp" android:id="@+id/chbDone" android:layout_weight="4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent"
                android:layout_marginBottom="10dp"
                android:onClick="onCheckedDone"/>
    </LinearLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp" android:src="@drawable/approved" android:id="@+id/imgApproved"
            android:visibility="invisible"
            android:alpha="0.8"
    />
</android.support.constraint.ConstraintLayout>