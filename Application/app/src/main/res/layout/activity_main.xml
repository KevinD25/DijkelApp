    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:srcCompat="@drawable/technicaschild" android:id="@+id/imageView3"
            android:scaleType="fitCenter"
            android:padding="80dp"
            android:layout_marginTop="80dp"
            android:alpha="0.1"
    />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25pt"
                android:weightSum="20"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp">


            <com.mancj.materialsearchbar.MaterialSearchBar
                    style="@style/MaterialSearchBarLight"
                    app:mt_speechMode="false"
                    app:mt_hint="Search..."
                    app:mt_maxSuggestionsCount="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchBar"
                    android:layout_weight="18"
                    android:layout_marginLeft="10dp"
                    app:mt_placeholder="Search..."/>
            <ImageButton
                android:layout_width="10pt"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/settings"
                android:id="@+id/btnSettings"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/colorPrimaryDark" android:onClick="goToSettings"/>
        </LinearLayout>
        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorAccent"
                android:layout_marginBottom="15dp"
        />
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/listSchachten"
