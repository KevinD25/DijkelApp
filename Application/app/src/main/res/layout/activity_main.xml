<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimaryDark">

    <android.support.design.widget.FloatingActionButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:clickable="true"
            app:srcCompat="@drawable/plus"
            android:scaleType="fitCenter"
            android:id="@+id/btnAdd"
            app:maxImageSize="50dp"
            android:paddingTop="20dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.983"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:borderWidth="2dp"
            android:elevation="2dp"
            android:focusedByDefault="true" app:fabSize="normal" app:fabCustomSize="75dp"
            android:onClick="openDijkelDialog"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25pt">
            <ImageView
                    android:layout_width="1pt"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/search"
                    android:id="@+id/imageView4"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:padding="12dp"
                    android:layout_marginLeft="3dp"
            />
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorAccent"
                    android:ems="10"
                    android:id="@+id/txtSearch"
                    android:layout_weight="1"
                    android:hint="Naam kutschacht"
                    android:focusedByDefault="false"
                    android:defaultFocusHighlightEnabled="false"
                    android:textColorHint="@color/colorAccent"/>
            <ImageButton
                    android:layout_width="10pt"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/settings"
                    android:id="@+id/btnSettings"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:backgroundTint="@color/colorPrimaryDark" android:onClick="goToSettings"/>
        </LinearLayout>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/listSchachten"
        >
        </ListView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>