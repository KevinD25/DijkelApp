<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:weightSum="20"
    >
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/txtSchacht" android:layout_weight="12"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>
        <TextView
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/txtDijkels" android:layout_weight="2"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent" android:src="@drawable/plus" android:id="@+id/btnPlus"
                android:layout_weight="3"
                android:scaleType="fitCenter"
                android:background="@null"
                android:padding="10dp"

        />
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent" android:src="@drawable/minus" android:id="@+id/btnMinus"
                android:layout_weight="3"
                android:scaleType="fitCenter"
                android:background="@null"
                android:padding="10dp"
        />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>